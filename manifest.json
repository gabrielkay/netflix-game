 {
  "manifest_version": 2,
  "name": "Plug 'n Chug",
  "description" : "Netflix drinking games made easy",
  "version": "0.0.1",
  "browser_action": {
      "default_icon": "icon128.png",
      "default_popup": "popup.html"
  },
  "permissions": [
      "storage",
      "activeTab"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "run_at": "document_end",
      "js": ["content_script.js"]
    }
  ]
 }
